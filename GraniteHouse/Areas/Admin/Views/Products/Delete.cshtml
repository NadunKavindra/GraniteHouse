@model GraniteHouse.Models.ViewModel.ProductsViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Product Delete</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="products.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="products.Price" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="productTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="products.ProductTypes.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="specialTags"></label>
                </div>
                <div class="col-8">
                    <input asp-for="products.SpecialTags.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="products.shadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="products.shadeColor" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="products.Availability"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="products.Availability" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
